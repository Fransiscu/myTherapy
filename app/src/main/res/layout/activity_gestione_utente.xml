<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="Labelfor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="16sp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/statusBarColor"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:paddingTop="56dp"
                    android:paddingRight="24dp"
                    app:cardCornerRadius="8sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20sp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageProfile"
                            android:layout_width="130sp"
                            android:layout_height="130sp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30sp"
                            android:src="@drawable/avatardefault"
                            app:civ_border_color="@color/colorAccent"
                            app:civ_border_width="1dp" />

                        <TextView
                            android:id="@+id/titleProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageProfile"
                            android:layout_marginTop="10sp"
                            android:paddingLeft="30sp"
                            android:paddingTop="20sp"
                            android:paddingRight="30sp"
                            android:text="@string/suggerimento_nome"
                            android:textAlignment="center"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            tools:ignore="PrivateResource,RtlHardcoded" />


                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_card"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12sp" />

                    <!-- Inizio modifica dati -->

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profile_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/statusBarColor"
                        android:orientation="vertical"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        app:cardCornerRadius="8sp">

                        <!-- -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="10sp"
                            android:paddingEnd="10sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:paddingTop="10sp">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:hint="@string/suggerimento_nome"
                                    android:paddingStart="0sp"
                                    android:paddingEnd="5sp"
                                    tools:ignore="TooDeepLayout">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/profile_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="70sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:hint="@string/suggerimento_cognome"
                                    android:paddingStart="5sp"
                                    android:paddingEnd="0sp">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/profile_surname"
                                        android:layout_width="match_parent"
                                        android:layout_height="70sp" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="20sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="@string/suggerimento_username">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profile_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="70sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="20sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="@string/suggerimento_password"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profile_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="70sp"
                                    android:inputType="textPassword" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="20sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="15sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:hint="@string/suggerimento_data">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profile_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="70sp"
                                    android:drawableEnd="@drawable/baseline_calendar_today_24" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Inizio terapie -->

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/terapie_dettagli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/statusBarColor"
                        android:orientation="vertical"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        app:cardCornerRadius="8sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="10sp"
                            android:paddingEnd="10sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15sp"
                                android:text="@string/terapie_utente"
                                android:textSize="24sp" />


                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginBottom="1sp"
            android:clipToPadding="false"
            android:columnCount="1"
            android:paddingTop="5sp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/salva_modifiche_utente"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/salva_modifiche_utente"
                android:textSize="18sp" />

        </GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>