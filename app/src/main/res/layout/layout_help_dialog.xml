<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/help_dialog_question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/which_therapy_question"
        android:textSize="18sp" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/help_dialog_spinner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/help_dialog_question_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/help_dialog_question_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_dialog_spinner"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:text="@string/therapy_question_details"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/problema_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_dialog_question_2"
        android:paddingTop="10dp" />

</RelativeLayout>