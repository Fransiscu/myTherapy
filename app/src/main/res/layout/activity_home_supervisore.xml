<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="Labelfor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_supervisore_view"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="ExtraText">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titolo_supervisore"
                    android:text="@string/titolo_supervisore_home"
                    android:paddingTop="10sp"
                    android:paddingBottom="0sp"
                    android:textSize="42sp" />

                <ImageView
                    android:id="@+id/supervisor_notification"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15sp"
                    android:layout_toEndOf="@id/titolo_supervisore"
                    android:height="48sp"
                    android:paddingStart="10dp"
                    android:src="@drawable/supervisor_notification"
                    android:visibility="invisible"
                    tools:ignore="ContentDescription,HardcodedText,RtlSymmetry" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/supervisore_logout_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="@id/supervisor_notification"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15sp"
                    android:height="48sp"
                    android:text="@string/logout_text"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    app:strokeColor="@color/colorAccent"
                    app:strokeWidth="1sp"
                    tools:ignore="RelativeOverlap,RtlHardcoded" />

            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <!-- Start material card -->

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usersListRecyclerView" />

            <TextView
                android:id="@+id/no_user_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/nessun_item"
                android:textSize="24sp"
                android:visibility="gone" />

            <!-- End material card -->

            <!-- Spazio per evitare che il bottone copra l'ultimo item -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="70dp" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/home_supervisore_grid"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginBottom="1sp"
            android:clipToPadding="false"
            android:columnCount="1"
            android:paddingTop="5sp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/aggiungi_utenti_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/aggiungi_utenti"
                android:textSize="18sp" />

        </GridLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>